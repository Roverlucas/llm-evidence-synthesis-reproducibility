{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Screening Output",
  "type": "object",
  "required": ["decision", "confidence", "rationale", "exposure", "outcome", "study_design", "has_effect_estimate"],
  "properties": {
    "decision": {
      "type": "string",
      "enum": ["include", "exclude", "uncertain"]
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "rationale": {
      "type": "string",
      "minLength": 10
    },
    "exposure": {
      "type": "string",
      "enum": ["PM2.5", "other", "not_specified"]
    },
    "outcome": {
      "type": "string",
      "enum": ["respiratory_hospitalization", "respiratory_ED", "other", "not_specified"]
    },
    "study_design": {
      "type": "string",
      "enum": ["time_series", "case_crossover", "cohort", "other", "not_specified"]
    },
    "has_effect_estimate": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}
